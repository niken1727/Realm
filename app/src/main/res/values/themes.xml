<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Assignment" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>

    </style>

    <style name="TextInputLayout" parent="Widget.Design.TextInputLayout" />

    <style name="InputFieldLayout" parent="Widget.Design.TextInputLayout">
        <item name="boxStrokeColor">@color/black</item>
        <item name="android:colorControlActivated">@color/gray</item>
        <item name="hintTextAppearance">@style/HintTextProps</item>
        <item name="errorTextAppearance">@style/InputFieldError</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="HintTextProps">
        <item name="android:textColor">#353b48</item>
        <item name="android:textSize">14sp</item>

    </style>


    <style name="InputFieldError" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/error_red</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>